CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic


all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME) $@
%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

.PHONY: clean oclean fclean re

clean:
	$(RM) *~ $(NAME) $(OBJ)

oclean:
	$(RM) *~ $(NAME) $(OBJ)

fclean: clean

re: oclean all
